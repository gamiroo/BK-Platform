{
  "name": "balance",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "pnpm test:ci",
    "test:ci": "dotenv -e .env.test -- node scripts/run-tests.mjs",
    "build": "pnpm build:server && pnpm build:site && pnpm build:client && pnpm build:admin",
    "build:server": "tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    
    "check-balanceguard": "node scripts/check-balanceguard.mjs",
    "ci": "pnpm typecheck && pnpm lint && pnpm test && pnpm build && pnpm check-balanceguard",

    "db:generate": "dotenv -e .env.local -- drizzle-kit generate --config drizzle.config.ts",
    "db:safety:dev": "dotenv -e .env.local -- node --import tsx scripts/db-safety-check.ts",
    "db:safety:prod": "node --import tsx scripts/db-safety-check.ts",
    "db:bootstrap:dev": "dotenv -e .env.local -- node --import tsx scripts/db-bootstrap-env-marker.ts",
    "db:migrate:dev": "pnpm db:bootstrap:dev && pnpm db:safety:dev && dotenv -e .env.local -- drizzle-kit migrate --config drizzle.config.ts",
    "db:migrate:prod": "node scripts/confirm-prod-migrate.mjs && drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:ping": "node --import tsx scripts/db-ping.ts",
    "db:seed:dev": "dotenv -e .env.local -- node --import tsx scripts/db-seed-identity.ts",

    "dev:site": "vite --config src/frontend/site/vite.config.ts",
    "dev:client": "vite --config src/frontend/client/vite.config.ts",
    "dev:admin": "vite --config src/frontend/admin/vite.config.ts",
    "dev:server": "dotenv -e .env.local -- tsx watch --clear-screen=false src/server/http/index.ts",

    "build:site": "vite build --config src/frontend/site/vite.config.ts",
    "build:client": "vite build --config src/frontend/client/vite.config.ts",
    "build:admin": "vite build --config src/frontend/admin/vite.config.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "@types/web": "^0.0.317",
    "autoprefixer": "^10.4.23",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "semgrep": "^0.0.1",
    "supertest": "^7.2.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "balance": "link:",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "postgres": "^3.4.8",
    "redis": "^5.10.0",
    "stripe": "^20.1.2",
    "zod": "^4.3.5"
  }
}
