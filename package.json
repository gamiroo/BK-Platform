{
  "name": "balance",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "node --import tsx --test \"tests/**/*.test.ts\"",
    "build": "pnpm build:server && pnpm build:site && pnpm build:client && pnpm build:admin",
    "build:server": "tsc -p tsconfig.json",
    "check-balanceguard": "node scripts/check-balanceguard.mjs",
    "ci": "pnpm typecheck && pnpm lint && pnpm test && pnpm build && pnpm check-balanceguard",
    "db:generate": "dotenv -e .env.local -- drizzle-kit generate --config drizzle.config.ts",
    "db:migrate:dev": "dotenv -e .env.local -- drizzle-kit migrate --config drizzle.config.ts",
    "db:migrate:prod": "node scripts/confirm-prod-migrate.mjs && drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:ping": "node --import tsx scripts/db-ping.ts",
    "dev:site": "vite --config src/frontend/site/vite.config.ts",
    "dev:client": "vite --config src/frontend/client/vite.config.ts",
    "dev:admin": "vite --config src/frontend/admin/vite.config.ts",
    "dev:server": "node --enable-source-maps dist/src/server/http/index.js",
    "build:site": "vite build --config src/frontend/site/vite.config.ts",
    "build:client": "vite build --config src/frontend/client/vite.config.ts",
    "build:admin": "vite build --config src/frontend/admin/vite.config.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "@types/web": "^0.0.317",
    "autoprefixer": "^10.4.23",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "semgrep": "^0.0.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "postgres": "^3.4.8",
    "redis": "^5.10.0",
    "stripe": "^20.1.2",
    "zod": "^4.3.5"
  }
}
